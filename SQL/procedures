    cv.Room_no,
    cv.Join_date,
    cv.FullName,
    cv.DaysCheckedIn,
    cv.PCPName,
    COALESCE(m.Medications, 'None') AS Medications,
    lr.LastRoundDate,
    lrn.NurseName,
    lrn.LastBloodPressure,
    lrn.LastO2Saturation,
    lrn.LastTemp
FROM 
