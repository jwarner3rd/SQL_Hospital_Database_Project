USE `HospitalDB`$$
CREATE DEFINER=`root`@`localhost` PROCEDURE `Stay_Summary`()
BEGIN
    -- Get the stay data with patient and PCP information, including closed stays
    WITH StayDetails AS (
        SELECT 
            cio.Stay_ID,
            cio.Room_no,
            cio.Join_date,
            cio.Leave_date,
            CURDATE() AS Today,
            DATEDIFF(CURDATE(), cio.Join_date) AS DaysCheckedIn,
